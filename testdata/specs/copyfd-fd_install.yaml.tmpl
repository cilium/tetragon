apiVersion: cilium.io/v1alpha1
kind: TracingPolicy
metadata:
  name: "legacy-fd-tracking-placeholder-a"
spec:
  kprobes:
  - call: "security_file_permission"
    syscall: false
    args:
    - index: 0
      type: "file"
    - index: 1
      type: "int"
    selectors:
    - matchBinaries:
      - operator: In
        values:
        - {{.MatchedBinary}}
      matchArgs:
      - index: 0
        operator: "Postfix"
        values:
        - "strange.txt"
      - index: 1
        operator: "Equal"
        values:
        - "4"
