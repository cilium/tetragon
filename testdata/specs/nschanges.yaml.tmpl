apiVersion: cilium.io/v1alpha1
kind: TracingPolicy
metadata:
  name: "legacy-fd-tracking-removed"
spec:
  kprobes:
  - call: "security_file_permission"
    syscall: false
    return: false
    args:
    - index: 0
      type: "file"
    - index: 1
      type: "int"
    selectors:
    - matchPIDs:
      - operator: In
        followForks: true
        isNamespacePID: {{.NamespacePID}}
        values:
        - {{.MatchedPID}}
      matchArgs:
      - index: 0
        operator: "Postfix"
        values:
        - "strange.txt"
      - index: 1
        operator: "Equal"
        values:
        - "2"
      matchNamespaceChanges:
      - operator: In
        values:
        - "Mnt"
